@model Bangazon.Models.ProductType

@{
    ViewData["Title"] = "ProductListByType";
}

<h1>@Model.Label</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Price
            </th>
            <th>
                Qty
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products)
{
        <tr>
            <td>
                <a href=@Url.Action("Details", "Products", new {Id = item.ProductId })>
                    @Html.DisplayFor(modelItem => item.Title)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Types">Back to Product Types</a>
</div>
